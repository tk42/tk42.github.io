---
const navLinks = [
  { href: "/about", label: "About" },
  { href: "/memos", label: "Memos" },
  { href: "/notes", label: "Notes" },
];

const socialLinks = [
  { href: "https://github.com/tk42", label: "GitHub", external: true },
  { href: "https://www.instagram.com/tk____42", label: "Instagram", external: true },
  { href: "https://www.linkedin.com/in/tadashi-kojima-97bb0b9b/", label: "LinkedIn", external: true },
];
---

<nav class="site-nav" role="navigation" aria-label="main navigation">
  <div class="nav-inner">
    <a class="nav-brand" href="/">
      <span class="nav-brand-text">tk42</span>
    </a>

    <button
      class="nav-toggle"
      aria-label="menu"
      aria-expanded="false"
      data-target="navMenu"
    >
      <span></span>
      <span></span>
      <span></span>
    </button>

    <div id="navMenu" class="nav-links">
      {
        navLinks.map((link) => (
          <a href={link.href} class="nav-link">
            {link.label}
          </a>
        ))
      }
      {
        socialLinks.map((link) => (
          <a
            href={link.href}
            class="nav-link nav-link--external"
            target="_blank"
            rel="noopener noreferrer"
          >
            {link.label}
          </a>
        ))
      }
      <button class="nav-theme-toggle" onclick="modeSwitcher()" aria-label="Toggle theme">
        <img src="/sun.svg" class="theme-toggle-img" alt="theme" />
      </button>
    </div>
  </div>
</nav>

<style>
  .site-nav {
    position: sticky;
    top: 0;
    z-index: 1000;
    background: var(--color-nav-bg);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-bottom: 1px solid var(--color-border-light);
    padding: 0 1.5rem;
  }

  .nav-inner {
    max-width: var(--max-width-wide);
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 3.5rem;
  }

  .nav-brand {
    text-decoration: none;
    background-image: none;
    padding-right: 0;
  }

  .nav-brand-text {
    font-family: 'JetBrains Mono', monospace;
    font-size: var(--text-m);
    font-weight: 600;
    background: linear-gradient(135deg, var(--color-accent), var(--color-accent-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .nav-link {
    font-size: var(--text-s);
    font-weight: var(--text-weight-medium);
    color: var(--color-text-sub);
    text-decoration: none;
    padding: 0.4rem 0.75rem;
    border-radius: var(--radius-sm);
    transition: color var(--transition-fast), background var(--transition-fast);
    background-image: none;
    padding-right: 0.75rem;
  }

  .nav-link:hover {
    color: var(--color-accent);
    background: var(--color-accent-glow);
  }

  .nav-link--external {
    font-size: var(--text-xs);
    color: var(--color-text-sub);
    opacity: 0.7;
    background-image: none;
    padding-right: 0.75rem;
  }

  .nav-link--external:hover {
    opacity: 1;
    color: var(--color-accent);
    background: var(--color-accent-glow);
  }

  .nav-theme-toggle {
    background: none;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    cursor: pointer;
    padding: 0.35rem;
    margin-left: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: border-color var(--transition-fast), box-shadow var(--transition-fast);
  }

  .nav-theme-toggle:hover {
    border-color: var(--color-accent);
    box-shadow: 0 0 8px var(--color-accent-glow);
  }

  .nav-theme-toggle img {
    width: 18px;
    height: 18px;
  }

  .nav-toggle {
    display: none;
    flex-direction: column;
    gap: 4px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
  }

  .nav-toggle span {
    display: block;
    width: 20px;
    height: 2px;
    background: var(--color-text-main);
    border-radius: 1px;
    transition: transform var(--transition-fast), opacity var(--transition-fast);
  }

  @media screen and (max-width: 768px) {
    .nav-toggle {
      display: flex;
    }

    .nav-links {
      display: none;
      position: absolute;
      top: 3.5rem;
      left: 0;
      right: 0;
      flex-direction: column;
      background: var(--color-nav-bg);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      border-bottom: 1px solid var(--color-border-light);
      padding: 1rem;
      gap: 0.25rem;
    }

    .nav-links.is-active {
      display: flex;
    }

    .nav-link {
      width: 100%;
      padding: 0.6rem 1rem;
    }

    .nav-theme-toggle {
      margin-left: 0;
      margin-top: 0.5rem;
      width: fit-content;
    }
  }
</style>
