{
  "agents": {
    "defaults": {
      "model": {
        "primary": "anthropic/claude-sonnet-4-5"
      },
      "workspace": "/data"
    }
  },
  "channels": {
    "mattermost": {
      "enabled": true,
      "botToken": "${MATTERMOST_BOT_TOKEN}",
      "baseUrl": "${MATTERMOST_URL}",
      "chatmode": "onmessage",
      "dmPolicy": "open",
      "allowFrom": ["*"],
      "groupPolicy": "open"
    }
  },
  "tools": {
    "profile": "coding",
    "allow": [
      "group:fs",
      "group:runtime",
      "web_fetch",
      "group:memory",
      "image",
      "group:sessions"
    ],
    "deny": [
      "nodes",
      "canvas"
    ],
    "exec": {
      "backgroundMs": 10000,
      "timeoutSec": 1800
    },
    "web": {
      "search": {
        "enabled": false
      },
      "fetch": {
        "enabled": true
      }
    }
  },
  "skills": {
    "allowBundled": [
      "github",
      "summarize",
      "session-logs",
      "clawhub",
      "healthcheck"
    ],
    "load": {
      "extraDirs": ["./skills"]
    }
  }
}
