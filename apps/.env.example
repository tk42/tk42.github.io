# PostgreSQL
POSTGRES_USER=mattermost
POSTGRES_PASSWORD=change-me-to-a-strong-password
POSTGRES_DB=mattermost

# Mattermost
MATTERMOST_BOT_TOKEN=your-mattermost-bot-token

# OpenClaw / LLM
OPENAI_API_KEY=sk-xxxxx

# OpenClaw container user (for bind-mounted prompts/skills)
# On the VM, set these to your user id/group id (e.g. output of: id -u, id -g)
OPENCLAW_UID=1000
OPENCLAW_GID=1003

# GitHub (for OpenClaw auto-commit)
GITHUB_TOKEN=ghp_xxxxx
GITHUB_REPO=tk42/tk42.github.io

# OpenClaw Gateway
OPENCLAW_GATEWAY_TOKEN=generate-with-openssl-rand-hex-32

# Export endpoint (Basic Auth for zip download)
# Generate hash with: docker run --rm caddy:2-alpine caddy hash-password --plaintext YOUR_PASSWORD
# IMPORTANT: In .env, escape every $ as $$ (Docker Compose variable interpolation)
# Example: $2a$14$abc... â†’ $$2a$$14$$abc...
EXPORT_BASIC_AUTH_USER=admin
EXPORT_BASIC_AUTH_HASH=replace-with-caddy-hash-password-output
