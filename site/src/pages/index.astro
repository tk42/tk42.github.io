---
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout title="tk42">
  <div class="hero">
    <div class="hero-avatar-wrapper">
      <div class="hero-avatar-glow"></div>
      <img
        src="https://avatars.githubusercontent.com/u/8386849?s=400&u=888b9eb86400b7b05afd1009a93b19f6c03c72f9&v=4"
        class="hero-avatar"
        alt="tk42"
      />
    </div>

    <h1 class="hero-name">tk42</h1>
    <p class="hero-tagline">Software Engineer · Entrepreneur · Philosopher</p>

    <div class="hero-bio glass-card">
      <p>
        I write about technology, life, and everything in between.
        Building systems, exploring ideas, and connecting the dots.
      </p>
    </div>

    <blockquote class="hero-quote">
      <p>"Life is real, Life is earnest!"</p>
      <cite>— H.W. Longfellow, "A Psalm of Life"</cite>
    </blockquote>

    <div class="hero-links">
      <a href="https://github.com/tk42" class="hero-link-btn" target="_blank" rel="noopener noreferrer">
        <span class="hero-link-icon">&#9679;</span>
        GitHub
      </a>
      <a href="https://www.instagram.com/tk____42" class="hero-link-btn" target="_blank" rel="noopener noreferrer">
        <span class="hero-link-icon">&#9679;</span>
        Instagram
      </a>
      <a href="https://www.linkedin.com/in/tadashi-kojima-97bb0b9b/" class="hero-link-btn" target="_blank" rel="noopener noreferrer">
        <span class="hero-link-icon">&#9679;</span>
        LinkedIn
      </a>
    </div>

    <div class="hero-nav-cards">
      <a href="/memos" class="hero-nav-card glass-card">
        <h3>Memos</h3>
        <p>Categorized knowledge base — tech, history, lifehack, and more.</p>
      </a>
      <a href="/notes" class="hero-nav-card glass-card">
        <h3>Notes</h3>
        <p>Long-form articles on books, ideas, and reflections.</p>
      </a>
    </div>
  </div>
</BaseLayout>

<style>
  .hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 3rem 0 2rem;
    max-width: 640px;
    margin: 0 auto;
  }

  .hero-avatar-wrapper {
    position: relative;
    margin-bottom: 2rem;
  }

  .hero-avatar-glow {
    position: absolute;
    inset: -6px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--color-accent), var(--color-accent-secondary));
    opacity: 0.6;
    filter: blur(12px);
    animation: glow-pulse 3s ease-in-out infinite alternate;
  }

  @keyframes glow-pulse {
    from { opacity: 0.4; filter: blur(12px); }
    to { opacity: 0.7; filter: blur(18px); }
  }

  .hero-avatar {
    position: relative;
    width: 140px;
    height: 140px;
    border-radius: 50%;
    border: 3px solid var(--color-accent);
    object-fit: cover;
    z-index: 1;
  }

  .hero-name {
    font-size: var(--text-jumbo);
    font-weight: var(--text-weight-heavy);
    letter-spacing: -0.04em;
    margin: 0;
    padding: 0;
    background: linear-gradient(135deg, var(--color-accent), var(--color-accent-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-tagline {
    font-family: 'JetBrains Mono', monospace;
    font-size: var(--text-s);
    color: var(--color-text-sub);
    letter-spacing: 0.05em;
    margin: 0.5rem 0 2rem;
  }

  .hero-bio {
    max-width: 480px;
    text-align: center;
    margin-bottom: 2rem;
  }

  .hero-bio p {
    margin: 0;
    color: var(--color-text-sub);
    line-height: var(--text-leading-wide);
  }

  .hero-quote {
    max-width: 480px;
    margin: 0 0 2.5rem;
    padding: 1rem 1.5rem;
    border-left: 3px solid var(--color-accent);
    background: var(--color-card-bg);
    backdrop-filter: blur(8px);
    border-radius: 0 var(--radius-sm) var(--radius-sm) 0;
  }

  .hero-quote p {
    margin: 0;
    font-style: italic;
    color: var(--color-text-main);
    font-size: var(--text-m);
  }

  .hero-quote cite {
    display: block;
    margin-top: 0.5rem;
    font-size: var(--text-s);
    color: var(--color-text-sub);
    font-style: normal;
    font-family: 'JetBrains Mono', monospace;
  }

  .hero-links {
    display: flex;
    gap: 1rem;
    margin-bottom: 3rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .hero-link-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.6rem 1.25rem;
    font-size: var(--text-s);
    font-weight: var(--text-weight-medium);
    color: var(--color-text-main);
    background: var(--color-card-bg);
    backdrop-filter: blur(8px);
    border: 1px solid var(--color-card-border);
    border-radius: var(--radius-md);
    text-decoration: none;
    transition: all var(--transition-normal);
    background-image: none;
    padding-right: 1.25rem;
  }

  .hero-link-btn:hover {
    border-color: var(--color-accent);
    box-shadow: 0 0 16px var(--color-accent-glow);
    color: var(--color-accent);
  }

  .hero-link-icon {
    font-size: 0.5rem;
    color: var(--color-accent);
  }

  .hero-nav-cards {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    width: 100%;
  }

  .hero-nav-card {
    text-decoration: none;
    text-align: left;
    background-image: none;
    padding-right: 2rem;
  }

  .hero-nav-card h3 {
    font-size: var(--text-l);
    margin: 0;
    padding: 0 0 0.5rem;
    background: linear-gradient(135deg, var(--color-accent), var(--color-accent-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-nav-card p {
    margin: 0;
    font-size: var(--text-s);
    color: var(--color-text-sub);
    line-height: var(--text-leading-normal);
  }

  @media screen and (max-width: 640px) {
    .hero {
      padding: 2rem 0 1rem;
    }

    .hero-avatar {
      width: 110px;
      height: 110px;
    }

    .hero-nav-cards {
      grid-template-columns: 1fr;
    }

    .hero-links {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
